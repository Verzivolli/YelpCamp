<% include ../partials/header %> <!-- title is being added from app.js -->

<div class="container">
    <header class="jumbotron">
        <h1>Welcome! This is the campgrounds page</h1>
        <p> View our handpicked campgrounds</p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add new campground</a>
    </header>
    
    
    
    <div class ="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <!-- by default extrasmall is 12 by itself col-xs-12 -->
                <div class="thumbnail">
                    <img src="<%= campground.image %>"><img>
                    <div class="caption">
                        <h4>Name: <%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>